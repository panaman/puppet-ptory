pre {
 white-space: pre-wrap;       /* css-3 */
 white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
 white-space: -pre-wrap;      /* Opera 4-6 */
 white-space: -o-pre-wrap;    /* Opera 7 */
 word-wrap: break-word;       /* Internet Explorer 5.5+ */
}
body {background-color:<%= @color_b %>;} /* background of website */
.logo_color {color:<%= @color_a %>; padding-left: 10px; float: left; font-weight: bold;} /* Ptory logo color */
.logo_font {color:<%= @color_a %>; padding-right : 10px; height: 19px; font-size: 17px;font-family: arial; float: right; font-weight: bold;} /* words under logo */
.thickbar {background-color: <%= @color_a %>; height: 19px; width: 100%;} /* bar under logo */
.thinbar {border-top:2px solid <%= @color_a %>; border-bottom:2px solid <%= @color_a %>;}
.menu {margin-left: auto; margin-right: auto; color: <%= @color_b %>; font-family: arial; font-size: 16px; padding-top: 1px; padding-bottom: 1px; width: 100%;} /* words in bar */
.menu a:link {text-decoration: none; color: #FFF;}
.menu a:visited {text-decoration: none; color: #FFF;}
.menu a:hover {text-decoration: underline; color: #FFF;}
.menu a:active {text-decoration: none; color: #FFF;}
.mainguts {margin-left: auto; margin-right: auto; font-family: arial; font-size: 12px;}
.footer {border:1px solid; font-family: arial; font-size: 10px; padding-top: 10px; padding-bottom: 10px;  background-color: #fff;}
.mainblock {margin-left: auto; margin-right: auto; width: 100%;}
.header {margin-left: auto; margin-right: auto; height: 117px; width: 100%; background-color: #FFFFFF;}
.pad {padding: 3px;}
.longleft {width: 160px;}
.longright {width: 970px;}
.shortnamelist table {table-layout: fixed; background-color: #000000; width: 100%; white-space: normal;}
.stats table {table-layout: fixed; background-color: #000000; width: 100%; white-space: normal;}
.default {word-wrap: break-word; -ms-word-wrap: break-word; min-width: 100px;max-width: 100px; width: 100px; white-space: normal;}
table {background-color: #000000;}
td {vertical-align: top; background-color: #FFFFFF; padding: 5px; font-family: arial; font-size: 12px;}
a:link {text-decoration: none; color: #000;}
a:visited {text-decoration: none; color: #000;}
a:hover {text-decoration: underline; color: #000;}
a:active {text-decoration: none; color: #000;}
.hostname {word-wrap: break-word; -ms-word-wrap: break-word; min-width: 200px;max-width: 200px; width: 200px; white-space: normal;}
.interface {word-wrap: break-word; -ms-word-wrap: break-word; min-width: 200px;max-width: 200px; width: 200px; white-space: normal;}
.hostinterface {word-wrap: break-word; -ms-word-wrap: break-word; min-width: 200px;max-width: 200px; width: 200px; white-space: normal;}
.productname {width: 114px;}
.serialnumber {width: 88px;}
.cpu {width: 26px;}
.memorysize {width: 60px;}
.uptime {width: 58px;}
.os {width: 72px;}
.tdleft {width: 175px; vertical-align: top;}
.tdright {width: 900px; vertical-align: top;}
a.button { display: block; padding: 5em; margin: 2em; background-color: #f00; text-decoration: none; font-size: 3em; font-weight: bold; }
a.button:hover { background-color: #ff0; }
